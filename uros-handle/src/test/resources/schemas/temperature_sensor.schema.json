{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "../../../main/resources/schemas/resolvable.schema.json",
  "title": "温度传感器",
  "description": "描述一个温度传感器，包括温度值读数和开关接口",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "../../../main/resources/schemas/resolvable.schema.json#/$defs/uid",
      "description": "传感器唯一标识符"
    },
    "name": {
      "type": "string",
      "description": "传感器名称"
    },
    "status": {
      "type": "string",
      "description": "传感器状态",
      "enum": [
        "on",
        "off",
        "error"
      ],
      "default": "off"
    },
    "powerSwitch": {
      "type": "boolean",
      "description": "电源开关状态，true表示开启，false表示关闭",
      "default": false
    },
    "lastUpdated": {
      "type": "integer",
      "description": "最后更新时间（Unix时间戳，毫秒）"
    },
    "location": {
      "type": "object",
      "description": "传感器安装位置",
      "properties": {
        "room": {
          "type": "string",
          "description": "房间名称"
        },
        "position": {
          "type": "string",
          "description": "具体位置描述"
        }
      }
    },
    "alarmThresholds": {
      "type": "object",
      "description": "温度报警阈值设置",
      "properties": {
        "high": {
          "type": "number",
          "description": "高温报警阈值",
          "default": 40
        },
        "low": {
          "type": "number",
          "description": "低温报警阈值",
          "default": 0
        }
      }
    },
    "temperature": {
      "$ref": "../../../main/resources/schemas/handle.schema.json",
      "description": "温度数据获取的Handle接口"
    }
  },
  "required": [
    "id",
    "name",
    "status",
    "powerSwitch"
  ],
  "additionalProperties": false
}